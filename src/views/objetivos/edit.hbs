{{#objetivo}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="{{id}}" method="post">
                        <div class="mb-3">
                            <textarea type="text" rows="2" class="form-control" name="objetivo" placeholder="description">{{objetivo}}</textarea>
                        </div>
                        {{#metas}}
                            <div class="mb-3">
                                <textarea type="text" rows="2" class="form-control" name="meta" placeholder="meta">{{meta}}</textarea>
                            </div>
                        {{/metas}}
                        <div class="mb-3 d-grid gap-2">
                            <button class="btn btn-success btn-block">
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{/objetivo}}